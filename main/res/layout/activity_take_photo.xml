<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_c1b6be"
                android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:gravity="right|center_vertical"
        android:paddingRight="18dp">

        <ImageView
            android:id="@+id/toggle_flash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_flash_light_selector"/>

        <ImageView
            android:id="@+id/toggle_water_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/toggle_flash"
            android:src="@drawable/mark"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/header">

        <LinearLayout
            android:id="@+id/water_mark_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/bg_water_mark_selector"
            android:divider="@drawable/divider_hori"
            android:minWidth="66dp"
            android:orientation="vertical"
            android:showDividers="middle">

            <ImageView
                android:id="@+id/water_mark1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/water_mark_01_s"/>

            <ImageView
                android:id="@+id/water_mark2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/water_mark_02_s"/>

            <ImageView
                android:id="@+id/water_mark3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/water_mark_03_s"/>

            <ImageView
                android:id="@+id/water_mark4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/water_mark_04_s"/>

            <ImageView
                android:id="@+id/water_mark5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/water_mark_05_s"/>

            <ImageView
                android:id="@+id/water_mark6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/water_mark_06_s"/>

            <ImageView
                android:id="@+id/water_mark7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/water_mark_default"/>

            <ImageView
                android:id="@+id/water_mark8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/water_mark_08_s"/>

            <ImageView
                android:id="@+id/water_mark9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/water_mark_empty"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            />

        <ImageView
            android:id="@+id/bright_ajust"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/bright"/>

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            />

        <ImageView
            android:id="@+id/toggle_shot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/toggle_shot"/>

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            />

        <ImageView
            android:id="@+id/take_picture"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/icon_camera_take_selector"/>

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            />

        <ImageView
            android:id="@+id/photo_frame"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/icon_photo_frame"/>

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            />

        <ImageView
            android:id="@+id/group_photo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/icon_group_photo"/>

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            />
    </LinearLayout>
</RelativeLayout>